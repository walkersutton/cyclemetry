{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "cyclemetry",
  "version": "0.1.0",
  "identifier": "com.cyclemetry.app",
  "build": {
    "frontendDist": "../app/build",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "pnpm dev:frontend",
    "beforeBuildCommand": "pnpm build:frontend"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Cyclemetry",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "externalBin": [
      "binaries/cyclemetry-server"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
